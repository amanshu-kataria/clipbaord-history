{
  "manifest_version": 3,
  "name": "Clipboard",
  "description": "Clipboard history manager for Chrome.",
  "version": "0.1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Clipboard History"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "clip16.png",
    "32": "clip32.png",
    "128": "clip128.png"
  },
  "permissions": ["clipboardWrite", "storage"],
  "host_permissions": ["*://*/*"]
}
